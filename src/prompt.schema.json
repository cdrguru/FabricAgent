{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Prompt",
    "type": "object",
    "required": [
        "id",
        "name",
        "category",
        "pillars",
        "summary",
        "actions",
        "tags",
        "inputs"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9._<>-]+$"
        },
        "version": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "category": {
            "type": "string",
            "minLength": 1
        },
        "pillars": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "summary": {
            "type": "string",
            "minLength": 1
        },
        "description": {
            "type": "string"
        },
        "actions": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            },
            "minItems": 1
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "inputs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type",
                    "required"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "required": {
                        "type": "boolean"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "prompt": {
            "type": "string",
            "minLength": 20
        },
        "user_template": {
            "type": "string",
            "minLength": 20
        },
        "safety": {
            "type": "object",
            "required": [
                "safety_clause",
                "disallowed",
                "fallbacks"
            ],
            "properties": {
                "safety_clause": {
                    "type": "string",
                    "minLength": 10
                },
                "disallowed": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "fallbacks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "evals": {
            "type": "object",
            "required": [
                "adversarial_tests"
            ],
            "properties": {
                "adversarial_tests": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "expected_outputs": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "oneOf": [
        { "required": ["prompt"] },
        { "required": ["user_template"] }
    ],
    "additionalProperties": true
}
